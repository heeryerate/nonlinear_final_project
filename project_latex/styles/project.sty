%*********
% Preface
%*********
\def\preface{
  \pagenumbering{roman}
  \pagestyle{plain}
  \titlepage
  \addcontentsline{toc}{chapter}{Table of Contents}
  \tableofcontents
  \newpage
  \iftablespage
    \addcontentsline{toc}{chapter}{List of Tables}
    \listoftables
    \newpage
  \fi
  \iffigurespage
    \addcontentsline{toc}{chapter}{List of Figures}
    \listoffigures
    \newpage
  \fi
  \pagenumbering{arabic}
  \pagestyle{headings}
}

